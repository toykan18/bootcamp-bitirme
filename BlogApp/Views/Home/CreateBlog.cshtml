
@model Blog
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css"/>
    <script src="~/js/script.js defer"></script>
    <style>
        body {
            background-color: black;
        }

        .card-body {
            background-size: cover;
            border-radius: 15px; 
            box-shadow: 0 0 10px rgb(114, 13, 114); 
        }

        
        .form-control {
            font-weight:bolder;
            
        }

        textarea {
            font-weight:bolder;
            width: 100%;
            opacity: 0.5;
            
        }
    </style>
    <title>GameBlog</title>
</head>
<body>
    <header>
        @await Html.PartialAsync("_Navbar")
        </header>
         <!-- Main Content-->
            <main>
                 <div class="container mt-3">
    <div class="row">
      
          <div class="card-body p-4 p-sm-5">
             <form asp-controller="Home" asp-action="CreateBlog" method="post" enctype="multipart/form-data">
    <div class="mb-3">
    <label asp-for="Image" class="form-label" style="color: white;">Select Image</label>
    <select asp-for="Image" class="form-select">
        <option value="" selected>Select an Image</option>
        @{
            var imagePath = "E:/bootcamp-bitirme/BlogApp/wwwroot/img/"; 
            var imageDirectory = new System.IO.DirectoryInfo(imagePath);
            var imageFiles = imageDirectory.GetFiles("*.jpg"); 

            foreach (var imageFile in imageFiles)
            {
                var imageName = System.IO.Path.GetFileNameWithoutExtension(imageFile.Name);
                <text><option value="@imageFile.Name">@imageName</option></text>
            }
        }
    </select>
</div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label" style="color: white;">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label" style="color: white;">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
            </main>
        </div>
    </div>
</body>
