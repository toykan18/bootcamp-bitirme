@model List<Blog>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/styles.css" />
    <title>GameBlog</title>
</head>
<body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark " style="background-color: #181c3a;" id="mainNav">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="#">GameBlog</a>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto py-4 py-lg-0">
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="#">Home</a></li>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/home/about">About</a></li>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="#">Contact</a></li>
                    </ul>
                </div>
            </div>
        </nav>
          
           
        </header>
         <!-- Main Content-->
            <main>
                <div class="pagehead" style="background-image: url('../img/home-bg.jpg');">
                <div class="container" >
                <h1 style="color: white;">My Game Blog</h1>
                <span class="subheading" style="color: white;">Written By Toykan A</span>     
            </div>
                </div>
                <div class="container px-4 px-lg-5">
                 <div class="row gx-4 gx-lg-5">
                @foreach (var blog in Model)
                {
                    <div class="col-md-6 mb-4 blog-card">
                        <!-- Post preview-->
                        <div class="post-preview">
                            <a href="post.html">
                                <img src="~/img/@blog.Image" class="img-fluid rounded" alt="Blog-Image" style="flex: 0 0 200px; height: 200px; margin-right: 20px;">
                                <div style="flex: 1;">
                                    <h2 class="post-title">@blog.Title</h2>
                                    <h3 class="post-description">@blog.Description</h3>
                                    <p class="post-meta">
                                        Posted by
                                        <a href="#!">@blog.Author</a>
                                        on @blog.PostedDate.ToString("MMMM dd, yyyy")
                                    </p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </main>
        </div>
    </div>

</body>
</html>