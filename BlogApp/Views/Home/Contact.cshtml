@model Contact
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css"/>
    <script src="~/js/script.js defer"></script>
    <style>
        body {
            background-color: black;
        }

        .card-body {
            background-size: cover;
            background-image: url('../img/contact-bg1.jpg');
            border-radius: 15px; /* Köşeleri yuvarlak yap */
            box-shadow: 0 0 10px rgb(114, 13, 114); /* Derinlik eklemek için gölgelendirme */
        }

        
        .form-control {
            font-weight:bolder;
        }

        textarea {
            font-weight:bolder;
            width: 100%;
            opacity: 0.5;
            
        }
    </style>
    <title>GameBlog</title>
</head>
<body>
    <header>
    @await Html.PartialAsync("_Navbar")
        </header>
         <!-- Main Content-->
        
            <main>
      <div class="container mt-3">
    <div class="row">
      
          <div class="card-body p-4 p-sm-5" style="background-size: cover; background-image: url('../img/contact-bg1.jpg');" >
            <h5 class="card-title text-center mb-5 fw-light fs-5" style="color: white;">Contact</h5>
           <form asp-controller="Home" asp-action="Contact" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label" style="color: white;">Your Name</label>
                        <input asp-for="Name" class="form-control" style="opacity: 0.5;">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Surname" class="form-label" style="color: white;">Your Surname</label>
                        <input asp-for="Surname" class="form-control"style="opacity: 0.5;>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Eposta" class="form-label"style="color: white;">Your Email</label>
                        <input asp-for="Eposta" class="form-control"style="opacity: 0.5;>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Telephone" class="form-label"style="color: white;">Your Phone Number</label>
                        <input asp-for="Telephone" class="form-control"style="opacity: 0.5;>
                    </div>
                    <div class="mb-3">
                        <p style="color: white;">Your Message</p>
                        <textarea asp-for="Message" name="message" id="message" cols="30" rows="10" style="width: 100%; opacity: 0.5;">Your Message</textarea>
                    </div>

                    <div class="mb-5 text-end">
                     <button type="submit" class="btn btn-dark">Send</button>
                    </div>
                </form>

            
          </div>
        

            </main>
         

</body>
</html>