@model AppRole

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/register.css"/>
    <script src="~/js/script.js defer"></script>
    <title>GameBlog</title>
</head>
<body>
    <header>
    @await Html.PartialAsync("_Navbar")
        </header>
         <!-- Main Content-->
         <div class="container mt-3">
            <main>
      <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
          <div class="card-img-left d-none d-md-flex">
            <!-- Background image for card set in CSS! -->
          </div>
          <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-5 fw-light fs-5">Edit Roles</h5>
            <form asp-action="Edit" method="post">
              <div asp-validation-summary="All" class="text-danger"></div>
              <input type="hidden" name="Id" value="@Model.Id">

              <div class="form-floating mb-3">
                <input  asp-for="Name" class="form-control" required autofocus>
                <label asp-for="Name"></label>
              </div>


              <div class="d-grid mb-2">
                <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" type="submit">Submit</button>
              </div>


            </form>
            <hr>
            <table class="table-sm table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th style="width: 70px;"></th>
            </tr>
        </thead>
        <tbody>
            @if(ViewBag.Users != null){
             @if(ViewBag.Users.Count == 0){
                <tr><td colspan="4" class="text-center">No Roles</td></tr>
            }
            @foreach(var user in ViewBag.Users){
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>

                        
                    </td>
                </tr>
            }
             }
             
        </tbody>
    </table>
          </div>
        </div>
      </div>
    </div>
  </div>

            </main>
         </div>

</body>
</html>